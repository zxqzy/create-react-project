{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",       // 自动导入 React
    "moduleResolution": "node",
    "strict": true,           // 开启严格模式
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",       // 路径别名基准目录
    "paths": {
      "@/*": ["./*"]          // 配置路径别名（可选）
    },
    "types": ["react"]  // 根据构建工具调整
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
